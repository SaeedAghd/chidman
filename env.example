# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,*.liara.ir,*.liara.app

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Security Settings (HTTPS disabled for Liara)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Payment Gateway (Zarinpal)
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
ZARINPAL_SANDBOX=True

# Liara AI Settings
LIARA_AI_API_KEY=your_liara_ai_api_key_here
USE_LIARA_AI=True
FALLBACK_TO_OLLAMA=True

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@chidmano.com
SITE_URL=https://chidmano.liara.app

# Liara Environment
LIARA=true
PRODUCTION=true

# Static Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Media Files
MEDIA_URL=/media/
MEDIA_ROOT=media