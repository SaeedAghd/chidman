# ===========================================
# CHIDMANO ENVIRONMENT CONFIGURATION TEMPLATE
# ===========================================
# Copy this file to .env and fill in your actual values
# This is a template for both development and production environments
# Last Updated: 2025-01-21
# Version: 1.0.0

# ===========================================
# DJANGO CORE SETTINGS
# ===========================================
DEBUG=True
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,testserver,your-domain.com,www.your-domain.com,*.liara.ir,*.liara.app,*.liara.run

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For development (SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# ===========================================
# SECURITY SETTINGS
# ===========================================
# CSRF Protection
CSRF_TRUSTED_ORIGINS=https://localhost:8443,https://127.0.0.1:8443,https://your-domain.com

# Session Security (enable for production with HTTPS)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# ===========================================
# AI CONFIGURATION
# ===========================================
# Liara AI (Recommended for production)
LIARA_AI_API_KEY=your_liara_ai_api_key_here
LIARA_AI_MODEL=openai/gpt-4.1
USE_LIARA_AI=True
FALLBACK_TO_OLLAMA=True

# OpenAI (Alternative)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Ollama (Local development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com
SITE_URL=https://your-domain.com

# Email verification settings
EMAIL_VERIFICATION_REQUIRED=True
EMAIL_VERIFICATION_EXPIRE_DAYS=7

# ===========================================
# PAYMENT GATEWAY (ZARINPAL)
# ===========================================
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
ZARINPAL_SANDBOX=True
ZARINPAL_CALLBACK_URL=https://your-domain.com/store/zarinpal/callback/

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# For development (local memory)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# For production (Redis)
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

CACHE_TIMEOUT=300

# ===========================================
# STATIC & MEDIA FILES
# ===========================================
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
# Database connection pooling
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=True

# File upload limits
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB

# ===========================================
# DEPLOYMENT ENVIRONMENT
# ===========================================
# Set to true for production
LIARA=false
PRODUCTION=false
ENVIRONMENT=development

# ===========================================
# MONITORING & HEALTH CHECKS
# ===========================================
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_TIMEOUT=30

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_ANALYSIS=True
ENABLE_WALLET_SYSTEM=True
ENABLE_SUPPORT_SYSTEM=True
ENABLE_ADMIN_DASHBOARD=True
ENABLE_PAYMENT_SYSTEM=True

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
BACKUP_ENABLED=False
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=سایت در حال تعمیر است. لطفاً بعداً مراجعه کنید.

# ===========================================
# ANALYTICS & TRACKING
# ===========================================
ANALYTICS_ENABLED=False
TRACK_USER_BEHAVIOR=False
PERFORMANCE_MONITORING=False

# ===========================================
# API CONFIGURATION
# ===========================================
API_RATE_LIMIT=1000
API_TIMEOUT=30
API_VERSION=v1

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
NOTIFICATION_EMAIL_ENABLED=True
NOTIFICATION_SMS_ENABLED=False
NOTIFICATION_PUSH_ENABLED=False

# ===========================================
# CUSTOM BUSINESS LOGIC
# ===========================================
# Store analysis settings
MAX_ANALYSIS_PER_USER=10
ANALYSIS_EXPIRE_DAYS=30
ANALYSIS_PRICE_BASE=50000

# Wallet settings
WALLET_MIN_DEPOSIT=10000
WALLET_MAX_DEPOSIT=10000000
WALLET_MIN_WITHDRAWAL=5000

# Support settings
SUPPORT_TICKET_PRIORITY_HIGH=1
SUPPORT_TICKET_PRIORITY_MEDIUM=2
SUPPORT_TICKET_PRIORITY_LOW=3
SUPPORT_RESPONSE_TIME_HOURS=24

# ===========================================
# END OF CONFIGURATION
# ===========================================