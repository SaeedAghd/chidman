{
  "platform": "django",
  "python": {
    "version": "3.11"
  },
  "framework": "Django",
  "django": {
    "settingsFile": "chidmano/settings.py"
  },
  "build": {
    "buildCommand": "python manage.py collectstatic --noinput",
    "files": [
      {
        "source": "staticfiles/",
        "destination": "/static/"
      }
    ]
  },
  "services": [
    {
      "name": "web",
      "size": "S",
      "replicas": 1,
      "env": {
        "DJANGO_SETTINGS_MODULE": "chidmano.settings",
        "PYTHONPATH": "/app",
        "PRODUCTION": "True",
        "DEBUG": "False",
        "LIARA": "true",
        "WEB_CONCURRENCY": "1",
        "TIMEOUT": "120",
        "LIARA_AI_MODEL": "openai/gpt-4o-mini"
      },
      "healthCheck": {
        "path": "/health",
        "port": 80,
        "timeout": 30
      }
    }
  ]
}