{
  "platform": "django",
  "python": "3.11",
  "framework": "Django",
  "build": {
    "buildCommand": "python manage.py collectstatic --noinput && python manage.py migrate --no-input",
    "files": [
      {
        "source": "staticfiles/",
        "destination": "/static/"
      }
    ]
  },
  "services": [
    {
      "name": "web",
      "size": "S",
      "replicas": 1,
      "env": {
        "DJANGO_SETTINGS_MODULE": "chidmano.settings",
        "PYTHONPATH": "/app",
        "PRODUCTION": "True",
        "DEBUG": "False"
      },
      "healthCheck": {
        "path": "/health",
        "port": 80
      }
    }
  ]
}