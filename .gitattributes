# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Django templates
*.html text
*.css text
*.js text

# Configuration files
*.yml text
*.yaml text
*.json text
*.toml text
*.ini text
*.cfg text
*.conf text

# Documentation
*.md text
*.txt text
*.rst text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Database files
*.sqlite3 binary
*.db binary

# Environment files
.env* text
